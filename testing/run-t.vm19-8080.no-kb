#!/bin/bash

# Run the test set for each language with the server default KB
# Jonathan Gordon, 2014-10-17

export IDENTIFIER=$RANDOM

./test -d -l en -i $IDENTIFIER \
     -u http://colo-vm19.isi.edu:8080 \
     data/en.test.tsv > en-t.vm19-8080.no-kb.$IDENTIFIER.txt &
./test -d -l es -i $IDENTIFIER \
     -u http://colo-vm19.isi.edu:8080 \
     data/es.test.tsv > es-t.vm19-8080.no-kb.$IDENTIFIER.txt &
./test -d -l fa -i $IDENTIFIER \
     -u http://colo-vm19.isi.edu:8080 \
     data/fa.test.tsv > fa-t.vm19-8080.no-kb.$IDENTIFIER.txt &
./test -d -l ru -i $IDENTIFIER \
     -u http://colo-vm19.isi.edu:8080 \
     data/ru.test.tsv > ru-t.vm19-8080.no-kb.$IDENTIFIER.txt &

for job in `jobs -p`; do
    echo $job
    wait $job || echo "Failed: $job."
done

echo "Done."
